@model BusHostel.Web.Models.BookingModel
<section id="booking">
    @using (Html.BeginForm("HomePageBooking", "Booking", FormMethod.Post))
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Booking</h2>
                    @if ((bool)TempData["IsBookingSuccess"] == false)
                    {
                        if (TempData["BookingModel"] == null)
                        {
                            <h3 class="section-subheading text-muted">If you want to stay with us or you have some questions, please, complete this form.</h3>

                        }
                        else
                        {
                            <h3 class="section-subheading text-muted">
                                Sorry @((Model != null) ? Model.Name : ""), it seems that data is not correct. Please, check the form and try again!
                            </h3>
                        }
                    }
                    else
                    {
                        <h3 class="section-subheading text-muted">
                            Your message has been sent.
                        </h3>
                    }
                </div>
            </div>
            @if ((bool)TempData["IsBookingSuccess"] == false)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <!--Booking dialogs
                        <div class='alert alert-success' style="display:inline">
                            <button type='button' class='close' data-dismiss='alert' aria-hidden='true'></button>
                            <strong>Your message has been sent. </strong>
                        </div>

                            <div class='alert alert-danger' style="display:none">
                                <button type='button' class='close' data-dismiss='alert' aria-hidden='true'></button>
                                <strong>Sorry @((Model != null) ? Model.Name : ""), it seems that my mail server is not responding. Please try again later!</strong>
                            </div>-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.EditorFor(modelItem => Model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Name *" } });
                                    <p class="help-block text-danger">@Html.ValidationMessageFor(model => Model.Name)</p>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(modelItem => Model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Email *" } });
                                    <p class="help-block text-danger">@Html.ValidationMessageFor(model => Model.Email)</p>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(modelItem => Model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Phone *" } });
                                    <p class="help-block text-danger">@Html.ValidationMessageFor(model => Model.Phone)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextAreaFor(modelItem => Model.Message, new { @class = "form-control", placeholder = "Please enter a message." });
                                    <p class="help-block text-danger">@Html.ValidationMessageFor(model => Model.Message)</p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Book now</button>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
